<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text"
        android:layout_weight="3"
        android:gravity="start|center_vertical"
        android:textSize="@dimen/match_help_text_h1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="?textOnBackground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:background="?cardBackground"
        android:paddingLeft="@dimen/activity_vertical_margin"/>
    <TextView
        android:layout_weight="1"
        android:textSize="@dimen/match_score_text"
        android:id="@+id/redText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="start|center_vertical"
        android:background="?redAllianceBackground"
        android:textColor="?redAllianceText"
        android:paddingLeft="4dp" />
    <TextView
        android:layout_weight="1"
        android:textSize="@dimen/match_score_text"
        android:id="@+id/blueText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="start|center_vertical"
        android:background="?blueAllianceBackground"
        android:textColor="?blueAllianceText"
        android:paddingLeft="4dp" />

</TableRow>
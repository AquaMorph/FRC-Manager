<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:summary="General"
        android:title="General">
        <PreferenceScreen
            android:summary=""
            android:title="Relaunch Setup">
            <intent android:action="com.aquamorph.frcmanager.activities.Setup"/>
        </PreferenceScreen>
        <EditTextPreference
            android:defaultValue="0000"
            android:inputType="number"
            android:key="teamNumber"
            android:summary="Your teams number"
            android:title="Team Number"/>
        <EditTextPreference
            android:defaultValue="2015"
            android:inputType="number"
            android:key="year"
            android:summary="Select the year"
            android:title="Competition Year"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:summary="About"
        android:title="About">
        <PreferenceScreen
            android:key="settings_version"
            android:summary="Created by Christian Colglazier"

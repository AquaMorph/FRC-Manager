<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:summary="@string/general_summary"
        android:title="@string/general_title">
        <PreferenceScreen
            android:summary="Relaunches the setup screen"
            android:title="Reset team and event">
            <intent android:action="com.aquamorph.frcmanager.activities.Setup"/>
        </PreferenceScreen>
        <EditTextPreference
            android:defaultValue="0000"
            android:inputType="number"
            android:key="teamNumber"
            android:summary="Your teams number"
            android:title="Team Number"/>
        <EditTextPreference
            android:defaultValue="2015"
            android:inputType="number"
            android:key="year"
            android:summary="Select the year"
            android:title="Competition Year"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:summary="About"
        android:title="About">
        <PreferenceScreen
            android:key="settings_version"
            android:summary="Created by Christian Colglazier"
            android:title="Version 0.1.0"/>
        <Preference
            android:summary="www.thebluealliance.com"
            android:title="Data from the Blue Alliance">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://www.thebluealliance.com"/>
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>